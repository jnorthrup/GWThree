<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title{
			font-weight:bold;
			color:#666;
		}
	</ui:style>
	<g:HTMLPanel>
<g:VerticalPanel horizontalAlignment="center">
<g:Label stylePrimaryName="{style.title}">Position</g:Label>
	<g:HorizontalPanel spacing="2">
		<g:Label ui:field="xl">X:</g:Label>
		<g:Label ui:field="xv" width="30px"/>
		<g:Label ui:field="yl">Y:</g:Label>
		<g:Label ui:field="yv" width="30px"/>
		<g:Label ui:field="zl">Z:</g:Label>
		<g:Label ui:field="zv" width="30px"/>
	</g:HorizontalPanel>
	<g:Button width="50px" ui:field="foward">Z-</g:Button>
	<g:HorizontalPanel>
		<g:Button width="50px" ui:field="left">X-</g:Button>
		<g:Button width="50px" ui:field="reset">reset</g:Button>
		<g:Button width="50px" ui:field="right">X+</g:Button>
	</g:HorizontalPanel>
	<g:Button width="50px" ui:field="back">Z+</g:Button>
	<g:HorizontalPanel>
		<g:Button width="50px" ui:field="up">Y+</g:Button>
		<g:Button width="50px" ui:field="down">Y-</g:Button>
	</g:HorizontalPanel>
</g:VerticalPanel>
</g:HTMLPanel>
</ui:UiBinder> 